
        SELECT 
            pi.id as order_id,
            pi.sent_datetime,
            pi.product_id,
            i.title AS product_title,
            i.img,
            i.price,
            pi.client_response,
            users.fullname as buyer
        FROM 
            orders_list pi
        LEFT JOIN 
            products i ON i.id = pi.product_id
        LEFT JOIN users ON pi.by_user_id=users.id
        WHERE 
            pi.is_canceled_row = 0
            AND pi.id = 1
    