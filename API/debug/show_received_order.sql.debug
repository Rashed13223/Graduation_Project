
          SELECT 
              pi.id as order_id,
              pi.sent_datetime,
              pi.product_id,
              i.title AS product_title,
              i.img,
              i.price,
              pi.client_response
          FROM 
              orders_list pi
          LEFT JOIN 
              products i ON i.id = pi.product_id
          WHERE 
              pi.is_canceled_row = 0
              AND i.by_user_id=2
          ORDER BY pi.id DESC
      